@model ConcultancyCRM.Models.LeaveRequest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LeaveRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="EmployeeId" class="control-label"></label>
                    </div>
                    <div class="col-7">
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="RequestDate" class="control-label"></label>

                    </div>
                    <div class="col-7">
                        <input asp-for="RequestDate" class="form-control" />
                        <span asp-validation-for="RequestDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="LeaveRemarks" class="control-label"></label>

                    </div>
                    <div class="col-7">
                        <input asp-for="LeaveRemarks" class="form-control" />
                        <span asp-validation-for="LeaveRemarks" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group form-check mt-3">
                <div class="row">
                    <div class="col-5">
                    </div>
                    <div class="col-7">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="ApprovedByUserName" class="control-label"></label>

                    </div>
                    <div class="col-7">
                        <input asp-for="ApprovedByUserName" class="form-control" />
                        <span asp-validation-for="ApprovedByUserName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="ApprovedDate" class="control-label"></label>


                    </div>
                    <div class="col-7">
                        <input asp-for="ApprovedDate" class="form-control" />
                        <span asp-validation-for="ApprovedDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="FromDate" class="control-label"></label>
                    </div>
                    <div class="col-7">

                        <input asp-for="FromDate" class="form-control" />
                        <span asp-validation-for="FromDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="ToDate" class="control-label"></label>
                    </div>
                    <div class="col-7">
                        <input asp-for="ToDate" class="form-control" />
                        <span asp-validation-for="ToDate" class="text-danger"></span>
                    </div>
                </div>
              
            </div>
            <div class="d-flex justify-content-between mt-3">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                        </svg>
                        Create
                    </button>
                </div>
                <a asp-action="Index">
                    <button type="button" class="btn btn-secondary ">
                        <ion-icon name="arrow-back-outline"></ion-icon>
                        Back to List
                    </button>
                </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
