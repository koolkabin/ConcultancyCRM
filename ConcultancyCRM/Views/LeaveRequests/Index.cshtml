@model IEnumerable<ConcultancyCRM.Models.LeaveRequest>

@{
    ViewData["Title"] = "Index";
    int sn = 1;
}

<h1 class="text-left">
    Leave Request
    <div class="float-end">
        <a asp-action="Create" class="btn btn-success">
            <ion-icon name="add-outline"></ion-icon>
            Create
        </a>
    </div>
</h1>
<hr />
<table class="table table-stripped table-bordered dataTable" id="myTable">
    <thead>
        <tr>
            <th>SN</th>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveRemarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovedByUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(sn++)
                </td>
                <td>
                    @ViewHelper.GetDate(item.RequestDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LeaveRemarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsApproved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApprovedByUserName)
                </td>
                <td>
                    @(item.ApprovedDate.ToString() != "" ? ViewHelper.GetDate(item.FromDate) : "")
                </td>

                <td>
                    @ViewHelper.GetDate(item.FromDate)
                </td>
                <td>
                    @ViewHelper.GetDate(item.ToDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
                <td>
                    <div class="d-flex" style="gap:5px;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                            <ion-icon name="create-outline"></ion-icon>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                            <ion-icon name="eye-outline"></ion-icon>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <ion-icon name="trash-outline"></ion-icon>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script>
        $('#myTable').DataTable();
    </script>
}