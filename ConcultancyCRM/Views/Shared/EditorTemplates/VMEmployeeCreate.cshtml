@model VMEmployeeCreate


@Html.Raw(TempDataHelper.ShowMsg(TempData))
<div class="form-group">
    <div class="row">
        <label asp-for="Name" class="control-label col-sm-4"></label>
        <div class="col-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Email" class="control-label"></label>

        </div>
        <div class="col-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Address" class="control-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Mobile" class="control-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Status" class="control-label"></label>

        </div>
        <div class="col-8">
      
            <input type="checkbox"
                   asp-for="Status"
                   value="true"
                   data-toggle="toggle"
                   data-on="Yes"
                   data-off="No"
                   data-onstyle="success"
                   data-offstyle="danger">
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="IsAdmin" class="control-label"></label>

        </div>
        <div class="col-8">
            <input type="checkbox"
                   asp-for="IsAdmin"
                   value="True"
                   data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="danger">
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="IsSalesRepresentative" class="control-label"></label>
        </div>
        <div class="col-8">
            <input type="checkbox"
                   asp-for="IsSalesRepresentative"
                   value="True"
                   data-toggle="toggle" data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="danger">
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="JoinDate" class="control-label"></label>
        </div>
        <div class="col-8">
            <input asp-for="JoinDate" class="form-control" />
            <span asp-validation-for="JoinDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="Password" class="control-label"></label>
        </div>
        <div class="col-8">
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <span class="text-secondary fs-6">Password must be 6 characters with at least one uppercase letter, one lowercase letter, one number, and one special character.</span>
        </div>
    </div>
</div>
<div class="form-group row mt-3">
    <label class="col-sm-4"></label>
    <div class="col-8">
        <button type="submit" class="btn btn-primary">
            <ion-icon name="add-outline"></ion-icon>
            Save
        </button>
        <button type="reset" class="btn btn-secondary">
            <ion-icon name="refresh-outline"></ion-icon>
            Reset
        </button>
    </div>
</div>