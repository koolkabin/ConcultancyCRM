@model VMEmployeeCreate
@Html.Raw(TempDataHelper.ShowMsg(TempData))
<div class="form-group">
    <div class="row">
        <label asp-for="Name" class="control-label col-sm-2"></label>
        <div class="col-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="Address" class="control-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="Mobile" class="control-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="Mobile" class="form-control" />
            <span asp-validation-for="Mobile" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="Email" class="control-label"></label>

        </div>
        <div class="col-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Deleted" /> @Html.DisplayNameFor(model => model.Deleted)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="JoinDate" class="control-label"></label>
        </div>
        <div class="col-10">
            <input asp-for="JoinDate" class="form-control" />
            <span asp-validation-for="JoinDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
            <label asp-for="Password" class="control-label"></label>
        </div>
        <div class="col-10">
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col-10">
            <div class="row">
                <div class="col-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsSalesRepresentative" /> @Html.DisplayNameFor(model => model.IsSalesRepresentative)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="form-group row">
    <label class="col-2"></label>
    <div class="col-10">

        <button type="submit" class="btn btn-primary">
            <ion-icon name="add-outline"></ion-icon>
            Save
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <ion-icon name="arrow-back-outline"></ion-icon>
            Cancel
        </a>
    </div>
</div>
</div>