@model LeadComments

<div class="form-group">
    <div class="row">
        <div class="col-3">
            <label asp-for="Id" class="control-label"></label>
        </div>
        <div class="col-9">
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="LeadInfoId" class="control-label"></label>
        </div>
        <div class="col-9">
            <select asp-for="LeadInfoId" class="form-control" asp-items="ViewBag.LeadInfoId"></select>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="Status" class="control-label"></label>
        </div>
        <div class="col-9">
            <select asp-for="Status" class="form-control"></select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="TxnDate" class="control-label"></label>

        </div>
        <div class="col-9">
            <input asp-for="TxnDate" class="form-control" />
            <span asp-validation-for="TxnDate" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="EmployeeID" class="control-label"></label>
        </div>
        <div class="col-9">
            <select asp-for="EmployeeID" class="form-control" asp-items="ViewBag.EmployeeID"></select>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="Description" class="control-label"></label>

        </div>
        <div class="col-9">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="form-group mt-3">
    <div class="row">
        <div class="col-3">
            <label asp-for="EmpName" class="control-label"></label>

        </div>
        <div class="col-9">
            <input asp-for="EmpName" class="form-control" />
            <span asp-validation-for="EmpName" class="text-danger"></span>
        </div>
    </div>


</div>
<div class="form-group row mt-3">
    <label class="col-3"></label>
    <div class="col-9">
        <button type="submit" class="btn btn-primary">
            <ion-icon name="add-outline"></ion-icon>
            Save
        </button>
        <button type="reset" class="btn btn-secondary">
            <ion-icon name="refresh-outline"></ion-icon>
            Reset
        </button>
    </div>
</div>
