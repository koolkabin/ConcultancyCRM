@{
    ViewData["Title"] = "Login Page";
    Layout = null;

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="w-100 d-flex justify-content-center align-items-center" style="height:100vh;">
    <div class="w-25">
        @(Html.Raw(Context.GetMessage()))
        <p class="fs-1 text-center">Login</p>
        <form action="" method="post" class="w-100">
            <label>Username</label>
            <input type="text" name="username" class="form-control fs-5 mt-1" placeholder="Enter Username" />
            <label class="mt-3">Password</label>
            <input type="password" name="password" class="form-control fs-5 mt-1" placeholder="Enter Password" />
            <button type="submit" class="btn btn-secondary w-100 fs-5 mt-3">
                Login
            </button>
        </form>
    </div>
</div>


