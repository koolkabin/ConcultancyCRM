@{
    ViewData["Title"] = "Login Page";
    Layout = null;

}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="w-100 d-flex justify-content-center align-items-center" style="height:100vh;">
    <div class="w-25">
        <div class="card">
            <div class="card-header">Login</div>
            <div class="card-body ">
                @(Html.Raw(TempDataHelper.ShowMsg(TempData)))
                <form action="" method="post" class="w-100">
                    <div class="row">
                        <label class="col-sm-4">Username</label>
                        <div class="col-sm-8">
                            <input type="text" name="username" class="form-control fs-5 mt-1" placeholder="Enter Username" />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-4">Password</label>
                        <div class="col-sm-8">
                            <input type="password" name="password" class="form-control fs-5 mt-1" placeholder="Enter password" />
                        </div>
                    </div>
                    <div class="row">
                        <label class="col-sm-4"></label>
                        <div class="col-sm-8">
                            <button type="submit" class="btn btn-success">
                                <i class="key-outline"></i>
                                Login
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row d-flex flex-row">
        <div class="col-2 p-2">Flex item 1</div>
        <div class="col-6 p-2">Flex item 2</div>
        <div class="col-2 p-2">Flex item 3</div>
    </div>
</div>
