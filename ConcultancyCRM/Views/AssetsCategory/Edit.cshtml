@model ConcultancyCRM.Models.AssetsCategory

@{
    ViewData["Title"] = "Edit";
}
<h3 class="text-left">
    Edit Assets Category [@Model.Title]
    <div class="float-end">
        <a asp-action="Index" class="btn btn-success">
            <ion-icon name="arrow-back-outline"></ion-icon>
            Back To List
        </a>
    </div>
</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.Raw(TempDataHelper.ShowMsg(TempData))
            @Html.HiddenFor(x=>x.Id)
            @Html.EditorForModel()
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
