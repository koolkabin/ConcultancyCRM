@model IEnumerable<ConcultancyCRM.Models.AssetsCategory>

@{
    ViewData["Title"] = "Index";
    int sn = 1;
}
<h3 class="text-left">
    Assest Category
    <div class="float-end">
        <a asp-action="Create" class="btn btn-success">
            <ion-icon name="add-outline"></ion-icon>
            Create
        </a>
    </div>
</h3>
<hr />

@Html.Raw(TempDataHelper.ShowMsg(TempData))
<table class="table table-stripped table-bordered dataTable" id="myTable">
    <thead>
        <tr>
            <th>
                SN
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @(sn++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div class="d-flex" style="gap:5px;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-xs btn-warning">
                            <ion-icon name="create-outline"></ion-icon>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-xs btn-info">
                            <ion-icon name="eye-outline"></ion-icon>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-xs btn-danger">
                            <ion-icon name="trash-outline"></ion-icon>
                        </a>
                    </div>

                </td>
            </tr>
        }

    </tbody>
</table>
