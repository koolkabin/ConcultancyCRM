@model ConcultancyCRM.Models.VMEmployeeCreate

@{
    ViewData["Title"] = "Edit";
}

<h3 class="text-left">
    Edit Employee [@Model.Name]
    <div class="float-end">
        <a asp-action="Index" class="btn btn-success">
            <ion-icon name="arrow-back-outline"></ion-icon>
            Back To List
        </a>
    </div>
</h3>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @Html.EditorForModel()
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
    <script>
        $('#DepartmentList').select2();
    </script>
}
